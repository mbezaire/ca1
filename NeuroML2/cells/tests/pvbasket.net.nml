<?xml version="1.0" encoding="UTF-8"?>
<neuroml xmlns="http://www.neuroml.org/schema/neuroml2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.neuroml.org/schema/neuroml2 https://raw.github.com/NeuroML/NeuroML2/development/Schemas/NeuroML2/NeuroML_v2beta4.xsd"
    id = "NeuroML2_network_from_exported_cell">
    
    <include href="../pvbasket.cell.nml"/>

    <!-- Point process: Current clamp -->    
    <pulseGenerator id="IClamp0" delay="50ms" duration="200ms" amplitude="0.5nA" />
    
    
    <!-- Create a single-cell network -->

    <network id="network" type="networkWithTemperature" temperature="34 degC">
      
    <population id="Pop_pvbasketcell" component="pvbasketcell" size="1" type="populationList">
        <instance id="0">
            <location x="0" y="0" z="0"/>
        </instance>
    </population>

        <inputList id="IClamp0" component="IClamp0" population="Pop_pvbasketcell">
            <input id="0" target="../Pop_pvbasketcell/0/pvbasketcell" destination="synapses"/>
        </inputList>   
 
    </network>
  
</neuroml>
